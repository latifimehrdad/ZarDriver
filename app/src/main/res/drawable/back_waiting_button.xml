<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/waitingClick"
                android:centerColor="@color/gradiant1_1"
                android:endColor="@color/gradiant1"
                android:centerX="90%"
                android:angle="45"
                />
            <stroke android:width="3dp" android:color="@color/white"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/waiting"
                android:centerColor="@color/waitingClick"
                android:endColor="@color/gradiant0"
                android:centerX="90%"
                android:angle="45"
                />
            <stroke android:width="3dp" android:color="@color/white"/>
        </shape>
    </item>

</selector>
